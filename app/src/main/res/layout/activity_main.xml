<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradual_color_bg"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"


                    >

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="-20dp"
                        android:fontFamily="@font/inter_bold"
                        android:letterSpacing="-0.04"
                        android:lineSpacingExtra="11sp"
                        android:text="Welcome to"
                        android:textColor="#FF9800"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:letterSpacing="-0.04"
                        android:lineSpacingExtra="11sp"
                        android:text="SHU LIFE."
                        android:textColor="#6765ff"
                        android:textSize="45sp" />

                    <ImageView
                        android:id="@+id/bottom_nav"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/nav" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/rel1"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/most" />

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/inter_semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/shop_name"
                        android:textColor="#6765ff"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        />


                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/mostplayitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear"
                    android:layout_marginTop="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/mcollage"
                            android:layout_width="140dp"
                            android:layout_height="190dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/college" />

                        <TextView
                            android:id="@+id/collage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/inter_bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#CDDC39"
                            android:ems="1"
                            android:text="录取通知书"
                            android:textColor="#fff"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/msmile"
                            android:layout_width="180dp"
                            android:layout_height="190dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/smile"
                            />

                        <TextView
                            android:id="@+id/smile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="学姐遗失的香水"
                            android:fontFamily="@font/inter_bold"
                            android:ems="1"
                            android:textSize="25dp"
                            android:textColor="#fff"
                            android:background="#CDDC39"/>

                        <ImageView
                            android:id="@+id/mmedicine"
                            android:layout_width="190dp"
                            android:layout_height="190dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/medcine"

                            />
                        <TextView
                            android:id="@+id/medicine"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="后悔药"
                            android:fontFamily="@font/inter_bold"
                            android:ems="1"
                            android:textSize="25dp"
                            android:textColor="#fff"
                            android:background="#CDDC39"/>

                        <ImageView
                            android:id="@+id/mglass"
                            android:layout_width="190dp"
                            android:layout_height="190dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/tablet"
                            />
                        <TextView
                            android:id="@+id/glass"                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="学长遗失的电脑"
                            android:fontFamily="@font/inter_bold"
                            android:ems="1"
                            android:textSize="25dp"
                            android:textColor="#fff"
                            android:background="#CDDC39"/>


                    </LinearLayout>



                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/lucky"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mostplayitem"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/start_lucky"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开始抽奖"
                        android:fontFamily="@font/inter_bold"
                        android:layout_gravity="center"
                        android:textSize="25dp"
                        android:textColor="#fff"
                        android:background="@drawable/gradual_color_bg3"
                        />
                    <Button
                        android:id="@+id/show_lucky"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:text="结果"
                        android:fontFamily="@font/inter_bold"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradual_color_bg3"
                        />
<!--                    <Button-->
<!--                        android:id="@+id/end_lucky"-->
<!--                        android:layout_weight="1"-->
<!--                        android:layout_marginLeft="20dp"-->
<!--                        android:layout_marginRight="20dp"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="PAUSE"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:textSize="25dp"-->
<!--                        android:textColor="#fff"-->
<!--                        android:background="@drawable/gradual_color_bg3"-->
<!--                        />-->
                    ></LinearLayout>







                <LinearLayout
                    android:id="@+id/popular"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lucky"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/popularicon" />

                    <TextView
                        android:id="@+id/game"
                        android:layout_width="227dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/inter_semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/other"
                        android:textColor="#fad345"
                        android:textSize="25sp"
                        android:textStyle="bold"

                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/popular"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >


                    <androidx.cardview.widget.CardView
                     android:id="@+id/popular1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradual_color_bg2"
                            >

                            <ImageView
                                android:id="@+id/pop2"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/gamehome" />

                            <TextView
                                android:id="@+id/appname2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="20dp"
                                android:layout_toEndOf="@+id/pop2"
                                android:layout_toRightOf="@+id/pop2"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="游戏介绍 "
                                android:textSize="20sp" />


                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname2"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/fourstar"
                                android:layout_toEndOf="@+id/pop2"
                                android:layout_toRightOf="@+id/pop2"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradual_color_bg2"
                            >

                            <ImageView
                                android:id="@+id/pop3"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/music"/>

                            <TextView
                                android:id="@+id/appname3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="24dp"
                                android:layout_toEndOf="@+id/pop3"
                                android:layout_toRightOf="@+id/pop3"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="声音测试"
                                android:textSize="20sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname3"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@+id/pop3"
                                android:layout_toRightOf="@+id/pop3"
                                android:background="@drawable/fourstar" />



                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular3"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradual_color_bg2"
                            >

                            <ImageView
                                android:id="@+id/pop1"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/rocket"/>

                            <TextView
                                android:id="@+id/appname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="24dp"
                                android:layout_toEndOf="@+id/pop1"
                                android:layout_toRightOf="@+id/pop1"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="开始游戏: library"
                                android:textSize="20sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@+id/pop1"
                                android:layout_toRightOf="@+id/pop1"
                                android:background="@drawable/fourstar" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular4"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/gradual_color_bg2"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/pop4"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/rocket" />

                            <TextView
                                android:id="@+id/appnam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="19dp"
                                android:layout_toEndOf="@+id/pop4"
                                android:layout_toRightOf="@+id/pop4"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="开始游戏: playground"
                                android:textSize="20sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appnam"
                                android:layout_marginStart="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@+id/pop4"
                                android:layout_toRightOf="@+id/pop4"
                                android:background="@drawable/fourstar" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>

    </ScrollView>


</RelativeLayout>